{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@repository/*": ["./src/repositories/*"],
      "@entity/*": ["./src/entities/*"],
      "@service/*": ["./src/services/*"],
      "@dto/*": ["./src/dto/*"],
      "@model/*": ["./src/models/*"],
      "@environment": ["./environment/environment.dev.ts"]
    },
    "types": [
      "jest"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
